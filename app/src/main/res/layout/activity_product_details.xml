<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.mis.route.e_commerce.domain.model.product.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.cart.CartActivity">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImage"
            imageFromUrl="@{product.imageCover}"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_beauty_products"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Favorite Icon -->
        <ImageView
            android:id="@+id/ic_favorite_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:src="@drawable/ic_favorites_selected"
            app:layout_constraintTop_toTopOf="@id/productImage"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/Tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{product.title}"
            android:textSize="18sp"
            android:textColor="#06004F"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/productImage"
            app:layout_constraintStart_toStartOf="@id/productImage"
            tools:text="@string/Tv_title" />

        <!-- Price -->
        <TextView
            android:id="@+id/Tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(product.price)}"
            android:textSize="18sp"
            android:textColor="#06004F"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/productImage"
            app:layout_constraintEnd_toEndOf="@id/productImage" />

        <!-- How Many Sold -->
        <TextView
            android:id="@+id/Tv_How_Many_Sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/Tv_title"
            app:layout_constraintStart_toStartOf="@id/Tv_title"
            tools:text="3,230 Sold" />

        <!-- Start Icon (e.g., Rating) -->
        <ImageView
            android:id="@+id/start_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorites_selected"
            app:layout_constraintTop_toBottomOf="@id/Tv_title"
            app:layout_constraintStart_toEndOf="@id/Tv_How_Many_Sold"
            app:layout_constraintEnd_toStartOf="@+id/quantityLayout" />

        <!-- Quantity Selector -->
        <LinearLayout
            android:id="@+id/quantityLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_shop_now_button_background"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/Tv_price"
            app:layout_constraintEnd_toEndOf="@id/Tv_price">

            <ImageView
                android:id="@+id/btnMinus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_minus_circle" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingHorizontal="8dp" />

            <ImageView
                android:id="@+id/btnPlus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_plus_circle" />
        </LinearLayout>

        <!-- Description Label -->
        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toBottomOf="@id/Tv_How_Many_Sold"
            app:layout_constraintStart_toStartOf="@id/Tv_How_Many_Sold" />

        <!-- Product Description -->
        <TextView
            android:id="@+id/Tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{product.description}"
            android:maxLines="4"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toBottomOf="@id/Description"
            app:layout_constraintStart_toStartOf="@id/Description"
            app:layout_constraintEnd_toEndOf="@id/quantityLayout"
            tools:text="Nike is a multinational corporation..." />

        <!-- Size Label -->
        <TextView
            android:id="@+id/text_Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/Tv_description"
            app:layout_constraintStart_toStartOf="@id/Tv_description" />

        <!-- Size Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSize"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/text_Size"
            app:layout_constraintStart_toStartOf="@id/text_Size">

            <TextView
                android:id="@+id/tvSize"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="39"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <!-- Color Label -->
        <TextView
            android:id="@+id/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/cardSize"
            app:layout_constraintStart_toStartOf="@id/text_Size" />

        <!-- Color Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardColor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/textColor"
            app:layout_constraintStart_toStartOf="@id/text_Size"
            >

            <ImageView
                android:id="@+id/tvColors"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                />
        </androidx.cardview.widget.CardView>

        <!-- Total Price Label -->
        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/total_price"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cardColor"
            app:layout_constraintStart_toStartOf="@id/cardColor"
            app:layout_constraintEnd_toEndOf="@id/cardColor"
            />

        <!-- Product Price -->
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(product.price)}"
            android:textColor="#06004F"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/total_price"
            app:layout_constraintStart_toStartOf="@id/total_price"
            tools:text="@string/total_price" />

        <!-- Add To Cart Button -->
        <Button
            android:id="@+id/AddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Add To Cart"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:paddingRight="100dp"
            app:icon="@drawable/ic_shopping_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
